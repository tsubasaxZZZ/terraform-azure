{
    "$schema": "https://schema.management.azure.com/schemas/0.1.2-preview/CreateUIDefinition.MultiVm.json#",
    "handler": "Microsoft.Azure.CreateUIDef",
    "version": "0.1.2-preview",
    "parameters": {
        "config": {
            "isWizard": false,
            "basics": {
                "description": "API Management を展開します。",
                "subscription": {
                    "resourceProviders": [
                        "Microsoft.ApiManagement"
                    ]
                },
                "location": {
                    "visible": true
                }
            }
        },
        "resourceTypes": [
            "Microsoft.ApiManagement/service"
        ],
        "basics": [
            {
                "name": "textBlock1",
                "type": "Microsoft.Common.TextBlock",
                "visible": true,
                "options": {
                    "text": "✔ リージョンはリソース グループと同一リージョン、SKU は Premium、ゾーン数は 3 で展開されます。"
                }
            },
            {
                "name": "textBlock2",
                "type": "Microsoft.Common.TextBlock",
                "visible": true,
                "options": {
                    "text": "✔ 仮想ネットワーク、サブネット、パブリック IP アドレス、NSG は予め展開しておく必要があります。このウィザードで新規に作成すると展開時にエラーになります。"
                }
            },
            {
                "name": "txtApimName",
                "type": "Microsoft.Common.TextBox",
                "label": "API Management のリソース名",
                "defaultValue": "",
                "toolTip": "",
                "placeholder": "",
                "multiLine": false,
                "constraints": {
                    "required": true,
                    "validations": [
                        {
                            "regex": "^[a-z]+[a-z0-9A-Z-]{0,48}[a-z0-9A-Z]$",
                            "message": "先頭はアルファベットで始め、それ以降は数字もしくはアルファベットで50文字以内にします。"
                        }
                    ]
                },
                "visible": true
            },
            {
                "name": "txtPublisherEmail",
                "type": "Microsoft.Common.TextBox",
                "label": "パブリッシャーのメールアドレス",
                "defaultValue": "",
                "toolTip": "",
                "placeholder": "",
                "multiLine": false,
                "constraints": {
                    "required": true
                },
                "visible": true
            },
            {
                "name": "txtPublisherName",
                "type": "Microsoft.Common.TextBox",
                "label": "パブリッシャーの名前",
                "defaultValue": "",
                "toolTip": "",
                "placeholder": "",
                "multiLine": false,
                "constraints": {
                    "required": true
                },
                "visible": true
            },
            {
                "name": "numUnitCount",
                "type": "Microsoft.Common.Slider",
                "min": 3,
                "max": 10,
                "label": "ユニット数",
                "subLabel": "",
                "defaultValue": 3,
                "showStepMarkers": true,
                "toolTip": "",
                "constraints": {
                    "required": true
                },
                "visible": true
            }
        ],
        "steps": [
            {
                "name": "networkSettings",
                "label": "ネットワークの選択",
                "elements": [
                    {
                        "name": "vnet",
                        "type": "Microsoft.Network.VirtualNetworkCombo",
                        "label": {
                            "virtualNetwork": "既存の仮想ネットワーク",
                            "subnets": "既存のサブネット"
                        },
                        "toolTip": {
                            "virtualNetwork": "",
                            "subnets": ""
                        },
                        "constraints": {
                            "minAddressPrefixSize": "/24"
                        },
                        "options": {
                            "hideExisting": false
                        },
                        "subnets": {
                            "subnet1": {
                                "label": "既存のサブネット",
                                "constraints": {
                                    "minAddressPrefixSize": "/24",
                                    "minAddressCount": 0,
                                    "requireContiguousAddresses": false
                                }
                            }
                        },
                        "visible": true
                    },
                    {
                        "name": "pip",
                        "type": "Microsoft.Network.PublicIpAddressCombo",
                        "label": {
                            "publicIpAddress": "既存の パブリック IP アドレス",
                            "domainNameLabel": "既存の ドメイン名ラベル"
                        },
                        "toolTip": {
                            "publicIpAddress": "",
                            "domainNameLabel": ""
                        },
                        "constraints": {
                            "required": {
                                "domainNameLabel": true
                            }
                        },
                        "options": {
                            "hideNone": false,
                            "hideDomainNameLabel": false,
                            "hideExisting": false,
                            "zone": 3
                        },
                        "visible": true
                    }
                ]
            }
        ],
        "outputs": {
            "apimName": "[basics('txtApimName')]",
            "publisherEmail": "[basics('txtPublisherEmail')]",
            "publisherName": "[basics('txtPublisherName')]",
            "sku": "Premium",
            "skuCount": "[basics('numUnitCount')]",
            "virtualNetworkName": "[steps('networkSettings').vnet.name]",
            "subnetName": "[steps('networkSettings').vnet.subnets.subnet1.name]",
            "location": "[location()]",
            "availabilityZones": "[\"1\",\"2\",\"3\"]",
            "publicIpAddressId": "[concat(subscription().id, '/resourceGroups/', resourceGroup().name, '/providers/Microsoft.Network/publicIPAddresses/', steps('networkSettings').pip.name)]"
        }
    }
}